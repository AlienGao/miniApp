@import "./../npm/wepy-com-toast/toast.wxss";
.content_container {
  position: relative;
  padding: 20rpx 0rpx;
}
.content_container image {
  width: 80%;
  height: 320rpx;
  margin: 0 auto;
  display: block;
}
.content_container .content {
  position: absolute;
  top: 20rpx;
  left: 10%;
  width: 80%;
  height: 240rpx;
  color: #fff;
  display: flex;
  justify-content: flex-start;
  overflow: hidden;
  box-sizing: padding-box;
}
.content_container .content .money {
  width: 28%;
  font-size: 34rpx;
  text-align: center;
  line-height: 260rpx;
  height: 260rpx;
  overflow: hidden;
}
.content_container .content .money text {
  margin-left: 20rpx;
  font-size: 76rpx;
}
.content_container .content .name {
  display: flex;
  justify-content: flex-start;
  font-size: 32rpx;
  width: 72%;
}
.content_container .content .name .title {
  line-height: 1;
  padding: 76rpx 0rpx 50rpx;
}
.content_container .content .name button {
  line-height: 1;
  padding: 10rpx 16rpx;
  background: #F6E8E1;
  font-size: 26rpx;
  border: none;
  margin-top: 138rpx;
}
.content_container .bottom-content {
  position: absolute;
  bottom: 40rpx;
  left: 18%;
  color: rgba(255, 255, 255, 0.7);
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
