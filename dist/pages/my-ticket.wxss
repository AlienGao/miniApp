.ticket-container image {
  width: 90%;
  height: 300rpx;
  margin: 20rpx auto;
  display: block;
}
.ticket-container .canuse {
  position: absolute;
  right: 38rpx;
  top: 2rpx;
  width: 180rpx;
  height: 180rpx;
}
.ticket-container .text-container {
  position: absolute;
  width: 90%;
  left: 5%;
  top: 0rpx;
  padding: 10rpx 20rpx;
}
.ticket-container .text-container .money {
  color: red;
  font-size: 72rpx;
  padding: 50rpx 50rpx 10rpx;
}
.ticket-container .text-container .money text {
  margin-left: 20rpx;
  font-size: 38rpx;
}
.ticket-container .text-container .name {
  font-size: 52rpx;
  line-height: 60rpx;
  padding: 10rpx 42rpx;
}
.ticket-container .text-container .tips {
  padding: 10rpx 0rpx 10rpx 42rpx;
  font-size: 26rpx;
}
.ticket-container .no-fav {
  padding: 200rpx 30rpx;
}
.ticket-container .no-fav image {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
}
