.container .tabs {
  display: flex;
  justify-content: flex-start;
  height: 80rpx;
  background: #fff;
}
.container .tabs view {
  width: 20%;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  position: relative;
}
.container .tabs view .dot {
  width: 10rpx;
  height: 10rpx;
  position: absolute;
  top: 20rpx;
  right: 6rpx;
  background: #d81e06;
  border-radius: 50%;
}
.container .tabs .active {
  color: #d81e06;
  border-bottom: 4rpx solid #d81e06;
}
.container .order {
  margin-top: 20rpx;
  padding-left: 20rpx;
  background: #fff;
}
.container .order:nth-last-child(1) {
  margin-bottom: 20rpx;
}
.container .order .top {
  border-bottom: 1rpx solid #dfdfdf;
}
.container .order .top view {
  padding: 10rpx 20rpx 10rpx 0rpx;
  font-size: 32rpx;
}
.container .order .top .content {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
}
.container .order .top .orderNumber {
  height: 40rpx;
  line-height: 40rpx;
}
.container .order .images {
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid #dfdfdf;
}
.container .order .images image {
  width: 134rpx;
  height: 134rpx;
  margin-right: 8rpx;
}
.container .order .bottom {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx 10rpx 0rpx;
  height: 80rpx;
}
.container .order .bottom .total {
  color: #d81e06;
  font-size: 32rpx;
  line-height: 80rpx;
}
.container .order .bottom .recommend {
  font-size: 32rpx;
  height: 60rpx;
  margin: 0rpx;
  margin-top: 10rpx;
  line-height: 60rpx;
  color: #d81e06;
  border: 2rpx solid #d81e06;
}
.container .order .bottom .buttons {
  width: 420rpx;
  display: flex;
  justify-content: space-between;
}
.container .order .bottom .buttons button {
  font-size: 32rpx;
  height: 60rpx;
  margin: 0rpx;
  margin-top: 10rpx;
  line-height: 60rpx;
}
.container .order .bottom .buttons .cancle {
  color: #cfcfcf;
  border: 2rpx solid #cfcfcf;
}
.container .order .bottom .buttons .pay {
  color: #d81e06;
  border: 2rpx solid #d81e06;
}
.container .no-orders {
  padding: 200rpx 20rpx;
  color: #dbdbdb;
}
.container .no-orders image {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}
.container .no-orders text {
  display: block;
  text-align: center;
  font-size: 36rpx;
  line-height: 80rpx;
}
