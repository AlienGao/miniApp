@import "./../components/goods.wxss";
@import "./../components/coupons.wxss";
@import "./../components/banner.wxss";
@import "./../npm/wepy-com-toast/toast.wxss";
.container .brand {
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 32rpx;
  line-height: 64rpx;
  text-align: center;
  margin: 20rpx 0rpx 0rpx;
  padding: 8rpx;
  box-sizing: border-box;
}
.container .sign {
  width: 180rpx;
  height: 180rpx;
  text-align: center;
  line-height: 180rpx;
  border-radius: 50%;
  font-size: 32rpx;
  color: #fff;
  background: rgba(246, 54, 55, 0.6);
  font-size: 36rpx;
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  z-index: 999;
}
.container .active {
  font-size: 22rpx;
}
